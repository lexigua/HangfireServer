    <script>
        $(function () {
            var current = new Date().getTime();
            $("#showimg").attr("src", "/Login/CheckCode?id=" + current);
        });
        function ClickRemoveChangeCode() {
            $("#imgCode").val("");
            getFocus("#imgCode");
            var current = new Date().getTime();
            $("#showimg").attr("src", "/Login/CheckCode?id=" + current);
        }
       
    </script>
