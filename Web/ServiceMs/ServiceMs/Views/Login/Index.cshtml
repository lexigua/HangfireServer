    <script src="~/Scripts/RSA/Barrett.js"></script>
    <script src="~/Scripts/RSA/BigInt.js"></script>
    <script src="~/Scripts/RSA/RSA.js"></script>
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />

    <script type="text/javascript">
        $(function () {
            getFocus("#input_box");
            $("#btnLogin").click(function () {
                $.easyui.showLoadingByStr("登录中...");
                uLogin();
            });
            /*$("#loginForm input").focus(function() {

            });*/
            $("#loginForm input").keydown(function () {
                appendHtml("#errorMessage", "");
            });
            document.onkeydown = function (event) { // enter 键
                var e = event || window.event || arguments.callee.caller.arguments[0];
                if (e && e.keyCode == 13) {
                    uLogin();
                }
            };
            $('.changeImgL').on("mouseover ", function () { // 图片放大缩小
                $('.changeImgL').removeClass('showBig');
                $(this).addClass('showBig');
            });

           

        });

       
        function clickRemenberPws2(obj) {
            if ($(obj).find("img").attr('src') == '/Css/images/login/login5.png') {
                $(obj).find("img").attr('src', '/Css/images/login/login55.png');
                $('#txtRemenberPws').val(0);
            } else {
                $(obj).find("img").attr('src', '/Css/images/login/login5.png');
                $('#txtRemenberPws').val(1);
            }
        }
    </script>
}
